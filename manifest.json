{
  "manifest_version": 3,
  "name": "Site Blocker (Password + Parent Mode)",
  "version": "2.2.0",
  "description": "Block sites; temporarily unlock with a password and duration. Parent Mode disables unlocks and password changes.",
  "permissions": ["storage", "tabs", "webNavigation"],
  "background": { "service_worker": "background.js" },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}



