{
  "manifest_version": 3,
  "name": "Site Blocker",
  "version": "1.2.1",
  "description": "Block distracting sites. Temporary unblocks. Parent Mode with password. Privacy-first and fully offline.",
  "action": {
    "default_title": "Site Blocker",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16_transparent.png",
    "48": "icon48_transparent.png",
    "128": "icon128_transparent.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}






