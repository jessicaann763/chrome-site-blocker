{
  "manifest_version": 3,
  "name": "Site Blocker with Temporary Access",
  "version": "1.1.0",
  "description": "Block sites and allow temporary access with a password for a chosen duration.",
  "permissions": ["storage", "tabs", "webNavigation"],
  "background": { "service_worker": "background.js" },
  "action": { "default_popup": "popup.html" },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

